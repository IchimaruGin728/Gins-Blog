---
import CFImage from "./CFImage.astro";

interface Props {
  src: string;
  alt: string;
  title?: string;
}

const { src, alt, title } = Astro.props;
---

<figure class="my-8">
  <CFImage
    src={src}
    alt={alt}
    class="rounded-xl w-full h-auto object-cover border border-white/10 shadow-lg"
    width={800}
    height={450}
    format="auto"
    fit="cover"
  />
  {
    title && (
      <figcaption class="text-center text-sm text-gray-500 mt-2">
        {title}
      </figcaption>
    )
  }
</figure>
