---
interface Props {
  imageId: string;
  variant?: string; // 'public', 'avatar', 'hero', etc. defaults to 'public'
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: "lazy" | "eager";
  fetchpriority?: "high" | "low" | "auto";
}

const {
  imageId,
  variant = "public",
  alt,
  width,
  height,
  class: className,
  loading = "lazy",
  fetchpriority = "auto",
} = Astro.props;

// Read the Cloudflare Account Hash from environment variables
const accountHash =
  import.meta.env.CLOUDFLARE_ACCOUNT_HASH ||
  Astro.locals.runtime?.env?.CLOUDFLARE_ACCOUNT_HASH ||
  process.env.CLOUDFLARE_ACCOUNT_HASH ||
  "M82pPQiNYSyK_UjCktOIJA";
// Fallback to Ichimaru's known hash if all else fails

// Construct the imagedelivery.net URL
// Format: https://imagedelivery.net/<ACCOUNT_HASH>/<IMAGE_ID>/<VARIANT>
const src = `https://imagedelivery.net/${accountHash}/${imageId}/${variant}`;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  fetchpriority={fetchpriority}
/>
