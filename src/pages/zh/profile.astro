---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/utils";

const lang = "zh";
const t = useTranslations(lang);

const user = Astro.locals.user;
if (!user) return Astro.redirect("/login");

const env = Astro.locals.runtime.env;
import { getDb } from "../../lib/db";
import { users } from "../../../db/schema";
import { eq } from "drizzle-orm";

const db = getDb(env);
const userProfile = await db
  .select()
  .from(users)
  .where(eq(users.id, user.id))
  .get();

const socialLinks = userProfile?.socialLinks
  ? JSON.parse(userProfile.socialLinks as string)
  : {};
---

<Layout title={t("profile.title")}>
  <div class="max-w-2xl mx-auto py-12 px-4">
    <h1
      class="text-3xl font-bold font-display mb-8 text-center text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-purple-400"
    >
      {t("profile.title")}
    </h1>

    <div class="glass-panel p-8 rounded-3xl">
      <form id="profile-form" class="space-y-6">
        <!-- Avatar Section -->
        <div class="flex flex-col items-center gap-4 mb-8">
          <div class="relative group">
            <img
              src={userProfile?.avatar ||
                `https://ui-avatars.com/api/?name=${userProfile?.username}&background=random`}
              alt="Avatar"
              id="avatar-preview"
              class="w-24 h-24 rounded-full border-2 border-white/10 object-cover"
            />
            <button
              type="button"
              id="change-avatar-btn"
              class="absolute inset-0 bg-black/50 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity text-xs font-bold text-white"
            >
              {t("profile.change_avatar")}
            </button>
            <input
              type="file"
              id="avatar-input"
              name="avatar_file"
              accept="image/*"
              class="hidden"
            />
          </div>
          <p class="text-xs text-gray-500">{t("profile.upload_hint")}</p>
        </div>

        <div>
          <label
            class="block text-xs font-bold text-gray-500 uppercase tracking-widest mb-2"
            >{t("profile.username")}</label
          >
          <input
            type="text"
            name="username"
            value={userProfile?.username}
            required
            class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 focus:outline-none focus:border-brand-accent text-white transition-colors"
          />
        </div>

        <div>
          <label
            class="block text-xs font-bold text-gray-500 uppercase tracking-widest mb-2"
            >{t("profile.bio")}</label
          >
          <textarea
            name="bio"
            rows="3"
            class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 focus:outline-none focus:border-brand-accent text-white transition-colors resize-none"
            placeholder={t("profile.bio_placeholder")}
            >{userProfile?.bio}</textarea
          >
        </div>

        <div class="border-t border-white/10 pt-6">
          <h3 class="text-lg font-bold mb-4">{t("profile.social_links")}</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label
                class="block text-xs font-bold text-gray-500 uppercase tracking-widest mb-2"
                >Twitter / X</label
              >
              <input
                type="text"
                name="twitter"
                value={socialLinks.twitter || ""}
                placeholder="@username"
                class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 focus:outline-none focus:border-brand-accent text-white transition-colors"
              />
            </div>
            <div>
              <label
                class="block text-xs font-bold text-gray-500 uppercase tracking-widest mb-2"
                >GitHub</label
              >
              <input
                type="text"
                name="github"
                value={socialLinks.github || ""}
                placeholder="username"
                class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 focus:outline-none focus:border-brand-accent text-white transition-colors"
              />
            </div>
            <!-- Additional fields can be added here -->
          </div>
        </div>

        <button
          type="submit"
          id="save-btn"
          class="w-full py-4 rounded-xl bg-gradient-to-r from-brand-primary to-brand-accent text-white font-bold hover:opacity-90 transition-opacity"
        >
          {t("profile.save")}
        </button>

        <p id="status" class="text-center text-sm hidden"></p>
      </form>

      <div class="mt-8 text-center border-t border-white/10 pt-6">
        <h3 class="text-sm font-bold text-gray-500 uppercase mb-4">
          {t("profile.linked_accounts")}
        </h3>
        <div class="flex justify-center gap-4">
          {
            userProfile?.githubId ? (
              <span class="flex items-center gap-2 px-3 py-1 bg-white/5 rounded-full text-xs text-green-400 border border-green-500/20">
                <span class="i-simple-icons-github" />{" "}
                {t("profile.github_connected")}
              </span>
            ) : (
              <a
                href="/login/github"
                class="text-xs text-gray-500 hover:text-white transition-colors"
              >
                {t("profile.connect_github")}
              </a>
            )
          }

          {
            userProfile?.googleId ? (
              <span class="flex items-center gap-2 px-3 py-1 bg-white/5 rounded-full text-xs text-green-400 border border-green-500/20">
                <span class="i-simple-icons-google" />{" "}
                {t("profile.google_connected")}
              </span>
            ) : (
              <a
                href="/login/google"
                class="text-xs text-gray-500 hover:text-white transition-colors"
              >
                {t("profile.connect_google")}
              </a>
            )
          }

          {
            userProfile?.discordId ? (
              <span class="flex items-center gap-2 px-3 py-1 bg-white/5 rounded-full text-xs text-green-400 border border-green-500/20">
                <span class="i-simple-icons-discord" />{" "}
                {t("profile.discord_connected")}
              </span>
            ) : (
              <a
                href="/login/discord"
                class="text-xs text-gray-500 hover:text-white transition-colors"
              >
                {t("profile.connect_discord")}
              </a>
            )
          }
        </div>
      </div>

      <!-- Provider Info Selection -->
      <div class="mt-10">
        <h3 class="text-xl font-bold text-white/90 mb-4">
          {t("profile.display_settings")}
        </h3>
        <p class="text-sm text-gray-400 mb-4">
          {t("profile.display_settings_desc")}
        </p>

        <div class="space-y-3">
          {
            user.githubUsername && (
              <label class="flex items-center gap-3 p-3 bg-white/5 rounded-lg cursor-pointer hover:bg-white/10 transition-colors">
                <input
                  type="radio"
                  name="provider"
                  value="github"
                  class="w-4 h-4 text-brand-accent"
                />
                <div class="flex items-center gap-3 flex-1">
                  <img
                    src={user.githubAvatar || ""}
                    alt="GitHub avatar"
                    class="w-10 h-10 rounded-full"
                  />
                  <div>
                    <div class="text-white font-medium">
                      {user.githubUsername}
                    </div>
                    <div class="text-xs text-gray-500">from GitHub</div>
                  </div>
                </div>
              </label>
            )
          }

          {
            user.googleUsername && (
              <label class="flex items-center gap-3 p-3 bg-white/5 rounded-lg cursor-pointer hover:bg-white/10 transition-colors">
                <input
                  type="radio"
                  name="provider"
                  value="google"
                  class="w-4 h-4 text-brand-accent"
                />
                <div class="flex items-center gap-3 flex-1">
                  <img
                    src={user.googleAvatar || ""}
                    alt="Google avatar"
                    class="w-10 h-10 rounded-full"
                  />
                  <div>
                    <div class="text-white font-medium">
                      {user.googleUsername}
                    </div>
                    <div class="text-xs text-gray-500">from Google</div>
                  </div>
                </div>
              </label>
            )
          }

          {
            user.discordUsername && (
              <label class="flex items-center gap-3 p-3 bg-white/5 rounded-lg cursor-pointer hover:bg-white/10 transition-colors">
                <input
                  type="radio"
                  name="provider"
                  value="discord"
                  class="w-4 h-4 text-brand-accent"
                />
                <div class="flex items-center gap-3 flex-1">
                  <img
                    src={user.discordAvatar || ""}
                    alt="Discord avatar"
                    class="w-10 h-10 rounded-full"
                  />
                  <div>
                    <div class="text-white font-medium">
                      {user.discordUsername}
                    </div>
                    <div class="text-xs text-gray-500">from Discord</div>
                  </div>
                </div>
              </label>
            )
          }

          <label
            class="flex items-center gap-3 p-3 bg-white/5 rounded-lg cursor-pointer hover:bg-white/10 transition-colors"
          >
            <input
              type="radio"
              name="provider"
              value="custom"
              class="w-4 h-4 text-brand-accent"
              checked
            />
            <div class="flex items-center gap-3 flex-1">
              <img
                src={user.avatar ||
                  `https://api.dicebear.com/7.x/avataaars/svg?seed=${user.username}`}
                alt="Current avatar"
                class="w-10 h-10 rounded-full"
              />
              <div>
                <div class="text-white font-medium">{user.username}</div>
                <div class="text-xs text-gray-500">Custom (editable above)</div>
              </div>
            </div>
          </label>
        </div>

        <button
          id="applyProviderBtn"
          class="mt-4 w-full px-4 py-2 bg-brand-accent/20 text-brand-accent rounded-lg font-medium hover:bg-brand-accent/30 transition-colors"
        >
          {t("profile.apply_selection")}
        </button>

        <div id="providerMessage" class="mt-2 text-sm text-center hidden"></div>
      </div>

      <div class="mt-8 flex justify-center">
        <form method="POST" action="/logout">
          <button
            class="text-red-400 hover:text-red-300 text-sm font-bold transition-colors"
            >{t("profile.sign_out")}</button
          >
        </form>
      </div>
    </div>
  </div>
</Layout>

<!-- Provider Selection Script -->
<script>
  const applyProviderBtn = document.getElementById(
    "applyProviderBtn",
  ) as HTMLButtonElement | null;
  const providerMessage = document.getElementById("providerMessage");

  if (applyProviderBtn && providerMessage) {
    applyProviderBtn.addEventListener("click", async () => {
      const selectedInput = document.querySelector(
        'input[name="provider"]:checked',
      ) as HTMLInputElement | null;
      const selectedProvider = selectedInput?.value;

      if (!selectedProvider) {
        providerMessage.textContent = "Please select a provider";
        providerMessage.className = "mt-2 text-sm text-center text-red-400";
        providerMessage.classList.remove("hidden");
        return;
      }

      applyProviderBtn.disabled = true;
      applyProviderBtn.textContent = "Applying...";

      try {
        const response = await fetch("/api/profile/use-provider-info", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ provider: selectedProvider }),
        });

        const data = (await response.json()) as { error?: string };

        if (response.ok) {
          providerMessage.textContent = "âœ“ Applied successfully! Refreshing...";
          providerMessage.className = "mt-2 text-sm text-center text-green-400";
          providerMessage.classList.remove("hidden");

          // Refresh the page after 1 second to show updated info
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        } else {
          providerMessage.textContent =
            data.error || "Failed to apply selection";
          providerMessage.className = "mt-2 text-sm text-center text-red-400";
          providerMessage.classList.remove("hidden");
          applyProviderBtn.disabled = false;
          applyProviderBtn.textContent = "Apply Selection";
        }
      } catch (error) {
        console.error("Error applying provider selection:", error);
        providerMessage.textContent = "An error occurred";
        providerMessage.className = "mt-2 text-sm text-center text-red-400";
        providerMessage.classList.remove("hidden");
        applyProviderBtn.disabled = false;
        applyProviderBtn.textContent = "Apply Selection";
      }
    });
  }
</script>

<script>
  const form = document.getElementById(
    "profile-form",
  ) as HTMLFormElement | null;
  const avatarInput = document.getElementById(
    "avatar-input",
  ) as HTMLInputElement | null;
  const changeAvatarBtn = document.getElementById("change-avatar-btn");
  const avatarPreview = document.getElementById(
    "avatar-preview",
  ) as HTMLImageElement | null;
  const status = document.getElementById("status");
  const saveBtn = document.getElementById(
    "save-btn",
  ) as HTMLButtonElement | null;

  if (
    form &&
    avatarInput &&
    changeAvatarBtn &&
    avatarPreview &&
    status &&
    saveBtn
  ) {
    changeAvatarBtn.addEventListener("click", () => avatarInput.click());

    avatarInput.addEventListener("change", async (e: Event) => {
      const target = e.target as HTMLInputElement;
      const file = target.files?.[0];
      if (!file) return;

      // Preview
      const reader = new FileReader();
      reader.onload = (ev) => {
        if (ev.target?.result) {
          avatarPreview.src = ev.target.result as string;
        }
      };
      reader.readAsDataURL(file);

      // Upload immediately
      const uploadStatus = document.createElement("span");
      uploadStatus.innerText = " Uploading...";
      changeAvatarBtn.appendChild(uploadStatus);

      try {
        const res = await fetch(
          `/api/upload?filename=${encodeURIComponent(file.name)}`,
          {
            method: "PUT",
            body: file,
          },
        );
        if (res.ok) {
          const data = (await res.json()) as { url: string };
          // Store the URL in a hidden input or just update the DB on Save.
          // We'll add a hidden input to the form to submit the URL
          let urlInput = form.querySelector(
            'input[name="avatar_url"]',
          ) as HTMLInputElement | null;
          if (!urlInput) {
            urlInput = document.createElement("input");
            urlInput.type = "hidden";
            urlInput.name = "avatar_url";
            form.appendChild(urlInput);
          }
          urlInput.value = data.url;
          uploadStatus.remove();
        }
      } catch (err) {
        console.error(err);
        uploadStatus.innerText = " Failed";
      }
    });

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      saveBtn.disabled = true;
      saveBtn.innerText = "Saving...";

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      try {
        const res = await fetch("/api/profile", {
          method: "POST", // or PATCH
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });

        if (res.ok) {
          status.innerText = "Profile Updated!";
          status.className = "text-center text-sm text-green-400 mt-4 block";
          setTimeout(() => status.classList.add("hidden"), 3000);
        } else {
          status.innerText = "Update Failed.";
          status.className = "text-center text-sm text-red-400 mt-4 block";
        }
      } catch (err) {
        console.error(err);
        status.innerText = "Network Error.";
        status.className = "text-center text-sm text-red-400 mt-4 block";
      } finally {
        saveBtn.disabled = false;
        saveBtn.innerText = "Save Changes";
      }
    });
  }
</script>
