---
import Layout from "../../layouts/Layout.astro";
import SocialLinks from "../../components/SocialLinks.tsx";
import CloudflareImage from "../../components/CloudflareImage.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const cfAvatarId =
  import.meta.env.PUBLIC_CF_AVATAR_ID ||
  Astro.locals.runtime?.env?.PUBLIC_CF_AVATAR_ID;

const lang = getLangFromUrl(Astro.url);
// biome-ignore lint/correctness/noUnusedVariables: Used in template
const t = useTranslations(lang);
---

<Layout title={`${t("nav.about")} - ${t("hero.title")}`}>
  <div class="flex flex-col items-center justify-center min-h-[60vh]">
    <div
      class="glass-panel p-12 rounded-[2rem] max-w-4xl w-full relative overflow-hidden group"
    >
      <!-- Background Glow -->
      <div
        class="absolute top-0 right-0 w-64 h-64 bg-brand-primary/20 blur-[100px] rounded-full -translate-y-1/2 translate-x-1/2 group-hover:bg-brand-primary/30 transition-all duration-700"
      >
      </div>

      <div class="relative z-10 flex flex-col md:flex-row items-center gap-8">
        <!-- Avatar -->
        <div class="relative">
          <div
            class="w-32 h-32 rounded-full p-1 bg-gradient-to-br from-brand-accent to-brand-primary avatar-protected overflow-hidden"
          >
            {
              cfAvatarId ? (
                <CloudflareImage
                  imageId={cfAvatarId}
                  variant="avatar"
                  alt="Ichimaru Gin"
                  class="w-full h-full rounded-full object-cover shadow-2xl shadow-brand-primary/50"
                />
              ) : (
                <div class="w-full h-full rounded-full bg-brand-primary/20 flex items-center justify-center">
                  <span class="text-brand-accent font-bold text-xl uppercase">
                    Gin
                  </span>
                </div>
              )
            }
          </div>
          <div
            class="absolute bottom-1 right-1 w-6 h-6 bg-green-500 rounded-full border-4 border-black animate-pulse"
            title="Online"
          >
          </div>
        </div>

        <!-- Content -->
        <div class="text-center md:text-left">
          <h1 class="text-4xl font-display font-bold mb-2">Ichimaru Gin</h1>
          <div class="flex gap-2 justify-center md:justify-start mb-4">
            <span
              class="px-3 py-1 rounded-full bg-brand-primary/20 border border-brand-primary/30 text-xs font-mono text-brand-accent"
              >{t("about.fullstack")}</span
            >
            <span
              class="px-3 py-1 rounded-full bg-brand-secondary/20 border border-brand-secondary/30 text-xs font-mono text-brand-secondary"
              >{t("about.ai")}</span
            >
          </div>

          <p class="text-gray-300 leading-relaxed mb-6">
            {t("about.description")}
          </p>

          <SocialLinks
            client:idle
            initialLinks={[
              {
                label: "Threads",
                url: "https://www.threads.net/@ichimarugin728",
                icon: "i-simple-icons-threads",
              },
              {
                label: "Twitter",
                url: "https://twitter.com/IchimaruGin728",
                icon: "i-simple-icons-x",
              },
              {
                label: "Tiktok",
                url: "https://www.tiktok.com/@ichimarugin728",
                icon: "i-simple-icons-tiktok",
              },
              {
                label: "GitHub",
                url: "https://github.com/IchimaruGin728",
                icon: "i-simple-icons-github",
              },
            ]}
          />
        </div>
      </div>
    </div>

    <div class="max-w-4xl w-full mt-24 px-4">
      <h2
        class="text-2xl font-display font-bold text-center mb-12 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-500"
      >
        {t("about.chronicle")}
      </h2>

      <div class="relative border-l border-white/10 ml-6 md:ml-12 space-y-12">
        <!-- Media Bundle Integration -->
        <div class="relative pl-8 md:pl-12">
          <span
            class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-cyan-400 shadow-[0_0_10px_rgba(34,211,238,0.5)] animate-pulse"
          ></span>
          <div
            class="glass-panel p-6 rounded-2xl hover:bg-white/5 transition-colors group border border-cyan-500/20"
          >
            <span class="text-sm font-mono text-cyan-400/70 mb-2 block"
              >2026.02.27</span
            >
            <h3
              class="text-lg font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors"
            >
              边缘原生媒体架构
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              完全弃用传统的静态托管，转而使用 Cloudflare 原生的 Images 和
              Stream API。通过 <code>&lt;CloudflareImage /&gt;</code> 和
              <code>&lt;CloudflareVideo /&gt;</code>
              组件实现了零延迟的媒体分发，并构建了专属的零信任工作流将资源直接推送到全球边缘网络。
            </p>
          </div>
        </div>

        <div class="relative pl-8 md:pl-12">
          <span
            class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-purple-500 shadow-[0_0_10px_rgba(168,85,247,0.5)]"
          ></span>
          <div
            class="glass-panel p-6 rounded-2xl hover:bg-white/5 transition-colors group"
          >
            <span class="text-sm font-mono text-purple-400/70 mb-2 block"
              >2026.02.11</span
            >
            <h3
              class="text-lg font-bold text-white mb-2 group-hover:text-purple-400 transition-colors"
            >
              {t("chronicle.mcp_agent")}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {t("chronicle.mcp_agent_desc")}
            </p>
          </div>
        </div>

        <div class="relative pl-8 md:pl-12">
          <span
            class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-orange-400 shadow-[0_0_10px_rgba(251,146,60,0.5)]"
          ></span>
          <div
            class="glass-panel p-6 rounded-2xl hover:bg-white/5 transition-colors group"
          >
            <span class="text-sm font-mono text-orange-400/70 mb-2 block"
              >2026.02.01</span
            >
            <h3
              class="text-lg font-bold text-white mb-2 group-hover:text-orange-400 transition-colors"
            >
              {t("chronicle.biome_fmt")}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {t("chronicle.biome_fmt_desc")}
            </p>
          </div>
        </div>

        <div class="relative pl-8 md:pl-12">
          <span
            class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-brand-accent shadow-[0_0_10px_rgba(139,92,246,0.5)]"
          ></span>
          <div
            class="glass-panel p-6 rounded-2xl hover:bg-white/5 transition-colors group"
          >
            <span class="text-sm font-mono text-brand-accent/70 mb-2 block"
              >2026.01.27</span
            >
            <h3
              class="text-lg font-bold text-white mb-2 group-hover:text-brand-accent transition-colors"
            >
              {t("chronicle.ai_search")}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {t("chronicle.ai_search_desc")}
            </p>
          </div>
        </div>

        <div class="relative pl-8 md:pl-12">
          <span
            class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-brand-secondary shadow-[0_0_10px_rgba(236,72,153,0.5)]"
          ></span>
          <div
            class="glass-panel p-6 rounded-2xl hover:bg-white/5 transition-colors group"
          >
            <span class="text-sm font-mono text-brand-secondary/70 mb-2 block"
              >2026.01.25</span
            >
            <h3
              class="text-lg font-bold text-white mb-2 group-hover:text-brand-secondary transition-colors"
            >
              {t("chronicle.blog_launch")}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {t("chronicle.blog_launch_desc")}
            </p>
          </div>
        </div>

        <div class="relative pl-8 md:pl-12">
          <span
            class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-blue-500/50"
          ></span>
          <div
            class="glass-panel p-6 rounded-2xl hover:bg-white/5 transition-colors group"
          >
            <span class="text-sm font-mono text-blue-400/70 mb-2 block"
              >2024.09.23</span
            >
            <h3
              class="text-lg font-bold text-white mb-2 group-hover:text-blue-400 transition-colors"
            >
              {t("chronicle.inception")}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {t("chronicle.inception_desc")}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .avatar-protected {
    -webkit-user-select: none;
    user-select: none;
    -webkit-touch-callout: none;
    pointer-events: auto;
  }
  .avatar-protected img {
    -webkit-user-drag: none;
    user-drag: none;
    pointer-events: none;
  }
</style>

<script>
  function protectAvatar() {
    document.querySelectorAll(".avatar-protected").forEach((el) => {
      el.addEventListener("contextmenu", (e) => e.preventDefault());
    });
  }
  document.addEventListener("astro:page-load", protectAvatar);
</script>
